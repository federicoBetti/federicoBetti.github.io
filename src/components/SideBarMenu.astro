---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li>
        <a class="py-3 text-base pl-4 relative group" id="home" href="/">
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Home
        </a>
    </li>
    <li>
        <a
            class="py-3 text-base pl-4 relative group"
            id="work-experience"
            href="/work-experience"
        >
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Work Experience
        </a>
    </li>
    <li>
        <a
            class="py-3 text-base pl-4 relative group"
            id="research-papers"
            href="/research-papers"
        >
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Research Papers
        </a>
    </li>
    <li>
        <a
            class="py-3 text-base pl-4 relative group"
            id="projects"
            href="/projects"
        >
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Projects
        </a>
    </li>
    <li>
        <a
            class="py-3 text-base pl-4 relative group"
            id="education"
            href="/education"
        >
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Education
        </a>
    </li>
    <li>
        <a
            class="py-3 text-base pl-4 relative group"
            id="contact"
            href="/contact"
        >
            <span
                class="pointer-events-none absolute left-0 top-2 bottom-2 w-[2px] bg-primary opacity-0 group-hover:opacity-80 transition-opacity rounded-sm"
            ></span>
            Contact
        </a>
    </li>
</ul>

<script
    define:vars={{
        sideBarActiveItemID: sideBarActiveItemID,
        activeClass: activeClass,
    }}
>
    const activeItemElem = document.getElementById(sideBarActiveItemID);
    if (activeItemElem) {
        activeItemElem.classList.add(activeClass, "relative");
        const bar = document.createElement("span");
        bar.className =
            "pointer-events-none absolute left-0 top-2 bottom-2 w-[3px] bg-primary opacity-90 rounded-sm";
        activeItemElem.appendChild(bar);
    }
</script>
