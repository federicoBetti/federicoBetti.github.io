---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout sideBarActiveItemID="contact">
    <div class="pb-12 mt-5">
        <div class="text-5xl font-bold mb-4">Get in Touch</div>
        <p class="text-base opacity-80 mb-8 max-w-2xl">
            I'm always open to connect. Whether it's about research, consulting,
            or new ideas, feel free to reach out using the contacts below.
        </p>

        <div class="card bg-base-200 shadow-lg">
            <div class="card-body">
                <h2 class="card-title text-2xl mb-4">Contacts</h2>

                <div class="space-y-4">
                    <!-- Email -->
                    <a
                        href="mailto:federico.betti@outlook.com"
                        class="flex items-center justify-between p-4 bg-base-100 rounded-lg hover:bg-base-300 transition-colors cursor-pointer"
                        aria-label="Send email to Federico"
                    >
                        <div class="flex items-center space-x-3">
                            <div
                                class="p-2 bg-primary text-primary-content rounded-lg"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M20 4H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2zm0 2v.511l-8 6.223-8-6.222V6h16zM4 18V9.044l7.386 5.745a.994.994 0 0 0 1.228 0L20 9.044 20.002 18H4z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">Email</div>
                                <div class="text-sm opacity-70">
                                    federico.betti@outlook.com
                                </div>
                            </div>
                        </div>
                    </a>

                    <!-- LinkedIn -->
                    <a
                        href="https://www.linkedin.com/in/federico-betti-13919a134/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-between p-4 bg-base-100 rounded-lg hover:bg-base-300 transition-colors cursor-pointer"
                        aria-label="Visit Federico's LinkedIn profile"
                    >
                        <div class="flex items-center space-x-3">
                            <div
                                class="p-2 bg-primary text-primary-content rounded-lg"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <circle cx="4.983" cy="5.009" r="2.188"
                                    ></circle>
                                    <path
                                        d="M9.237 8.855v12.139h3.769v-6.003c0-1.584.298-3.118 2.262-3.118 1.937 0 1.961 1.811 1.961 3.218v5.904H21v-6.657c0-3.27-.704-5.783-4.526-5.783-1.835 0-3.065 1.007-3.568 1.96h-.051v-1.66H9.237zm-6.142 0H6.87v12.139H3.095z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">LinkedIn</div>
                                <div class="text-sm opacity-70">
                                    Professional Network
                                </div>
                            </div>
                        </div>
                    </a>

                    <!-- CV Download -->
                    <a
                        href="/BettiFedericoCV_Long.pdf"
                        target="_blank"
                        rel="noopener noreferrer"
                        download="Federico_Betti_CV.pdf"
                        class="flex items-center justify-between p-4 bg-base-100 rounded-lg hover:bg-base-300 transition-colors cursor-pointer"
                        aria-label="Download Federico's CV"
                    >
                        <div class="flex items-center space-x-3">
                            <div
                                class="p-2 bg-primary text-primary-content rounded-lg"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z"
                                    ></path>
                                    <path d="M14 2v6h6"></path>
                                    <path d="M16 13H8"></path>
                                    <path d="M16 17H8"></path>
                                    <path d="M10 9H8"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">Curriculum Vitae</div>
                                <div class="text-sm opacity-70">
                                    Complete professional resume
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .badge {
        margin: 0.125rem;
    }
</style>
